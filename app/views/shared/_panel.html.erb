<div class="panel">
  <%= simple_form_for @website, url: website_path(@website), remote: true, html: { class: 'template-form' } do |f| %>
    <!--display name by default -->
    <div id="style-inputs">
      <h3>Choose your template</h3>
      <%= f.input :template_id, collection: @templates, as: :radio_buttons, label: false %>
    </div>

    <div id="edit-inputs">
      <h3>Edit your content</h3>
      <%= f.input :title %>
      <%= f.input :description, as: :text %>
      <%= f.input :background_image, as: :file %>
      <%= f.input :profile_image, as: :file %>
      <%= f.input :facebook_url %>
      <%= f.input :twitter_url %>
      <%= f.input :email %>
    </div>

    <div id="publish-inputs">
      <h3>Choose your custom URL</h3>
      <%= f.input :url, label: false %>
    </div>

    <%= f.button :submit, class: 'button btn-block', id: 'website-submit', value: 'Save template' %>
  <% end %>
</div>
