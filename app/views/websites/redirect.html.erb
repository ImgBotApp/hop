<div class="container">

  <h1>Your website details</h1>

  <ul class="list-group">
    <li class="list-group-item">Title<span class="pull-right"><%= @website.title %></span></li>
    <li class="list-group-item">URL<span class="pull-right"><%= link_to "#{root_url}#{@website.url}", "#{root_url}#{@website.url}" %></span></li>
    <li class="list-group-item">Template<span class="pull-right"><%= @website.template.name %></span></li>
  </ul>

  <%= link_to 'Back to homepage', root_path, class: 'button' %>
  <%= link_to 'Edit website', edit_website_path(@website), class: 'button' %>
</div>
